<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- "background shadow" -->
    <item
        android:left="2dp"
        android:top="2dp" >
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:centerColor="#45000000"
                android:endColor="#45000000"
                android:startColor="#00ffffff" />

            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- "background shadow" -->
    <item
        android:left="2dp"
        android:top="2dp" >
        <shape android:shape="rectangle" >
            <gradient
                android:angle="180"
                android:centerColor="#45000000"
                android:endColor="#45000000"
                android:startColor="#00ffffff" />

            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- background color -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape
            android:shape="rectangle"
            android:id="@+id/little_box_color" >
            <corners android:radius="10dp" />
            <solid android:color="#ff0000" />
        </shape>
    </item>

</layer-list>



